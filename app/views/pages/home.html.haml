=provide(:title, 'Home')

.row.clearfix

  .four.columns.alpha
    .boxee
      %img{:src=> "/assets/logo.png"}
  .eight.columns
    .boxee

      .lhs.vcard
        .name{:lang => "en"}
          %h2.fn.n
            %span.given-name Greg
            %span.family-name Stewart
          %h2.title{:lang =>"en"} Consultant / Developer
        %dl.info
          %dt.email
            %abbr.type{:title => "email"} Email
          %dd
            %i.icon-envelope
              =render 'partials/encrypted_email'
        %dl.tel
          %dt.phone
            %abbr.type{:title => "work"} Phone
          %dd
            %i.icon-phone-sign
              %span.value +44 208 2869246
          %dt.mobile
            %abbr.type{:title => "cell"} Mobile
          %dd
            %i.icon-phone-sign
              %span.value +44 7891 032239
          %dt.skype
            %abbr.type{:title => "Skype"} Skype
          %dd
            %i.icon-skype
              %a.url{:href => "skype:wildecard1999?call", :accesskey => "S", :tabindex => "4"} Skype me

        .address
          %i.icon-home
          %abbr.type{:title => "home"} Home
          %span{:lang => "en", :"xml:lang" => "en"}
            %span.street-address 547 Kingston Rd
            %span.locality Raynes Park
            %span.region London
            %span.postal-code SW20 8SF
  .four.columns.omega
    .boxee
      %a.url.icon{:href => "http://www.linkedin.com/in/gregstewart", :accesskey => "L", :tabindex => "3", :title => "Click to view LinkedIn profile"}
        %i.icon-linkedin-sign{:title => "LinkedIn icon"}

.row.clearfix
  .four.columns.alpha.isotope
    .boxee{:data => {:cateogry => "delicious"}}
      %a.url.icon{:href => "https://delicious.com/wildcard1999", :accesskey => "D", :tabindex => "5", :title => "Click to view my delicious profile"}
        %i.icon-delicious{:title => "Delicious icon"}

      .feed
        %h3
          =@page.get_by_type('delicious').length
          most recent bookmarks
        %ul
          -@page.get_by_type('delicious').each do |entry|
            %li{:class => 'delicious'}
              %a{:href=>entry[:url]}
                =entry[:content]


  .six.columns.isotope
    .boxee{:data => {:cateogry => "wordpress"}}
      %a.url.icon{:href => "http://gregs.tcias.co.uk", :accesskey => "V", :tabindex => "3", :title => "Click to view my blog"}
        %i.icon-wordpress{:title => "Wordpress icon"}

      .feed
        %h3
          =@page.get_by_type('blog').length
          most recent posts

        %ul
          -@page.get_by_type('blog').each do |entry|
            %li{:class => 'blog'}
              %a{:href=>entry[:url]}
                =entry[:content]

  .six.columns.omega.isotope
    .boxee{:data => {:cateogry => "vimeo"}}
      %a.url.icon{:href => "https://vimeo.com/user2724002/videos", :accesskey => "V", :tabindex => "3", :title => "Click to view Vimeo profile"}
        %i.icon-vimeo-sign{:title => "Vimeo icon"}

      .feed
        %ul.images
          -@page.get_by_type('vimeo').each do |entry|
            %li{:class => 'vimeo'}
              %div
                %a{:href=>entry[:url]}
                  %img{:src=>entry[:thumbnail], :title =>entry[:content], :class=>"vimeo inset-shadow"}
                %br
                =entry[:content]

.row.clearfix
  .six.columns.alpha.isotope
    .boxee{:data => {:cateogry => "twitter"}}
      %a.url.icon{:href => "https://twitter.com/_greg_stewart_", :accesskey => "T", :tabindex => "5", :title => "Click to view my twitter profile"}
        %i.icon-twitter{:title => "Twitter icon"}

      .feed
        %h3 Recent tweets
        %ul
          -@page.get_by_type('twitter').each do |entry|
            %li{:class => 'twitter'}
              %a{:href=>entry[:url]}
                =entry[:content]
              =entry[:date]
  .six.columns.isotope
    .boxee{:data => {:cateogry => "instagram"}}
      %a.url.icon{:href => "http://instagram.com/_greg_stewart_", :accesskey => "I", :tabindex => "5", :title => "Click to view my Instagram profile"}
        %i.icon-instagram{:title => "Instagram icon"}
      .feed
        %h3
          =@page.get_by_type('instagram').length
          most recent images
        %ul.images
          -@page.get_by_type('instagram').each do |entry|
            %li{:class => 'instagram'}
              %a{:href=>entry[:url]}
                %img{:src=>entry[:thumbnail], :title =>entry[:content], :class=>"instagram"}

  .four.columns.omega.isotope
    .boxee.stacked{:data => {:cateogry => "github"}}
      %a.url.icon{:href => "https://github.com/gregstewart", :accesskey => "G", :tabindex => "4", :title => "Click to view my Github profile"}
        %i.icon-github{:title => "Github icon"}

      .feed
        %ul
          -@page.get_by_type('github').each do |entry|
            %li{:class => 'github'}
              %a{:href => entry[:url]}
                =entry[:content]
              =entry[:date]
    .boxee.stacked{:data => {:cateogry => "stackoverflow"}}
      %a.url.icon{:href => "http://stackoverflow.com/users/197825/greg-stewart", :accesskey => "D", :tabindex => "5", :title => "Click to view my stackoverflow profile"}
        %i.icon-stack-overflow{:title => "Stackoverflow icon"}

.row.clearfix
  .eight.columns.alpha.isotope
    .boxee{:data => {:cateogry => "lastfm"}}
      %a.url.icon{:href => "http://www.last.fm/user/greg_stewart", :accesskey => "I", :tabindex => "5", :title => "Click to view my Last.fm profile"}
        %i.icon-lastfm-sign{:title => "Last.fm icon"}

  .eight.columns.omega.isotope
    .boxee{:data => {:cateogry => "flickr"}}
      %a.url.icon{:href => "http://www.flickr.com/photos/greg_and_jodie/", :accesskey => "F", :tabindex => "3", :title => "Click to view Flickr profile"}
        %i.icon-flickr-sign{:title => "Flickr icon"}

